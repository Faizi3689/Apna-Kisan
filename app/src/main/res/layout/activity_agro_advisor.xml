<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgroAdvisor">


    <EditText
        android:id="@+id/user_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Am your Agro Advisor"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_below="@id/user_query"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/chat_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_button"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Response will appear here"
        android:textSize="16sp"/>
</RelativeLayout>